{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "target": "ES2015",
    "checkJs": false,
    "module": "ESNext",
    "baseUrl": "./packages",
    "rootDir": "./packages",
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "skipLibCheck": true,
    "locale": "ru"
  },
  "exclude": ["node_modules"]
}
