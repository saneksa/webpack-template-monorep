{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "strict": true,
    "target": "ES2015",
    "checkJs": false,
    "module": "ESNext",
    "baseUrl": "./packages",
    "rootDir": "./packages",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "locale": "ru",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "types": ["@types/webpack-env", "reflect-metadata"]
  },
  "include": ["packages"],
  "exclude": ["node_modules"]
}
