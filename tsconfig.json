{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "strict": true,
    "target": "ES2015",
    "checkJs": false,
    "module": "AMD",
    "baseUrl": "./packages",
    "rootDir": "./packages",
    "allowSyntheticDefaultImports": false,
    "skipLibCheck": true,
    "locale": "ru",
    "types": ["@types/webpack-env"]
  },
  "include": ["packages"],
  "exclude": ["node_modules"]
}
